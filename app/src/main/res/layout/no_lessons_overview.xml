<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/no_lessons_overview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="4dp"
    android:paddingTop="32dp"
    android:paddingEnd="4dp"
    android:paddingBottom="32dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/no_lesson"
        android:contentDescription="@string/no_lesson_img_description" />

    <TextView
        android:id="@+id/no_lessons_overview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/lessons_recycler_empty_overview"
        android:textAlignment="center"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp" />

</LinearLayout>