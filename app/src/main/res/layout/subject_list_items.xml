<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/sli_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sli_constraint_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TextView
                android:id="@+id/sli_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:singleLine="false"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/days"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Subject name" />

            <LinearLayout
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/sli_monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/has_no_lesson_on_day"
                    android:gravity="center"
                    android:text="M"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    tools:text="M" />

                <TextView
                    android:id="@+id/sli_tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/has_no_lesson_on_day"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    tools:text="T" />

                <TextView
                    android:id="@+id/sli_wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/has_no_lesson_on_day"
                    android:gravity="center"
                    android:text="W"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    tools:text="W" />

                <TextView
                    android:id="@+id/sli_thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/has_no_lesson_on_day"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    tools:text="T" />

                <TextView
                    android:id="@+id/sli_friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/has_no_lesson_on_day"
                    android:gravity="center"
                    android:text="F"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    tools:text="F" />

                <TextView
                    android:id="@+id/sli_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/has_no_lesson_on_day"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    tools:text="S" />

                <TextView
                    android:id="@+id/sli_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/has_no_lesson_on_day"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    tools:text="S" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>